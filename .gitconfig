[user]
	name = Thomas Holmes
	email = thomas@devminded.com
[core]
	editor = vim
	excludesfile = ~/.gitignore
[color]
	ui = true
[push]
	default = simple
[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  aa = add --all

  head = !git l -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
